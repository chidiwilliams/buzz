{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automergeType": "pr",
    "platformAutomerge": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["*"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
